pkgbase=linux318
pkgname=('linux318' 'linux318-headers')
_kernelname=-MANJARO
_basekernel=3.18
_basever=318
_aufs=20160301
_bfq=v7r8
pkgver=${_basekernel}.28
pkgrel=1
arch=('i686' 'x86_64')
url="http://www.kernel.org/"
license=('GPL2')
makedepends=('xmlto' 'docbook-xsl' 'kmod' 'inetutils' 'bc')
options=('!strip')
source=("https://www.kernel.org/pub/linux/kernel/v3.x/linux-${_basekernel}.tar.xz"
