pkgbase=linux45
pkgname=('linux45' 'linux45-headers')
_kernelname=-MANJARO
_basekernel=4.5
_basever=45
_aufs=20160223
_bfq=v7r8
_rc=rc6
pkgver=${_basekernel}${_rc}
pkgrel=1
arch=('i686' 'x86_64')
url="http://www.kernel.org/"
license=('GPL2')
makedepends=('xmlto' 'docbook-xsl' 'kmod' 'inetutils' 'bc')
options=('!strip')
